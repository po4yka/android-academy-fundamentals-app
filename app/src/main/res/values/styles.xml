<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarButtonTextStyle" parent="TextStyle">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/back_button_text</item>
        <item name="android:textSize">12sp</item>style="@style/ToolbarButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/back_label"
            app:drawableLeftCompat="@drawable/ic_baseline_arrow_back"
    </style>

    <style name="TextHeaderStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_header</item>
    </style>

    <style name="TextMainHeaderStyle" parent="TextHeaderStyle">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextImageStyle" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_under_image</item>
    </style>

    <style name="TextRegularStyle" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_regular</item>
    </style>

    <style name="ImageViewActorStyle">
        <item name="android:layout_width">@dimen/actor_icon_size</item>
        <item name="android:layout_height">@dimen/actor_icon_size</item>
        <item name="android:layout_marginTop">@dimen/view_medium_gap</item>
        <item name="android:contentDescription">@string/actor_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageViewActorLandStyle" parent="ImageViewActorStyle">
        <item name="android:layout_width">@dimen/actor_icon_land_size</item>
        <item name="android:layout_height">@dimen/actor_icon_land_size</item>
    </style>

    <style name="TextImageLandStyle" parent="TextImageStyle">
        <item name="android:layout_width">@dimen/actor_icon_land_size</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/accent_disabled</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="ReviewTextStyle" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/accent_disabled</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
